---
import MainLayout from '../layouts/Mainlayout.astro';
import { Fragment } from 'react';
import { Box, Typography, Grid, Card, CardContent, Button } from '@mui/material';

const pageTitle = "Courses | Haasutech AI";
const pageDescription = "Explore AI, Data Science, and DSA courses by industry experts and IITians.";
const ogImage = "/ai-og.png";
---
<head>
  <title>{pageTitle}</title>
  <meta name="description" content={pageDescription} />
  <meta property="og:title" content={pageTitle} />
  <meta property="og:description" content={pageDescription} />
  <meta property="og:image" content={ogImage} />
  <meta property="og:type" content="website" />
</head>

<MainLayout>
  <Box sx={{ padding: '3rem 2rem' }}>
    <Typography variant="h4" gutterBottom align="center">
      All Courses
    </Typography>

    <Grid container spacing={4}>
      <Fragment>
        {[{
          title: 'Data Science Bootcamp',
          description: 'Full-stack data science: Python, Pandas, SQL, projects.',
          link: '#'
        },
        {
          title: 'Machine Learning with Projects',
          description: 'ML algorithms, real datasets, interview prep.',
          link: '#'
        },
        {
          title: 'DSA & Coding Interviews',
          description: 'Ace FAANG interviews with 200+ DSA problems.',
          link: '#'
        },
        {
          title: 'AI for Beginners',
          description: 'AI explained simply: no background needed.',
          link: '#'
        }].map((course, i) => (
          <Grid item xs={12} sm={6} md={3} key={i}>
            <Card>
              <CardContent>
                <Typography variant="h6" gutterBottom>{course.title}</Typography>
                <Typography variant="body2" gutterBottom>{course.description}</Typography>
                <Button variant="contained" href={course.link} size="small">View Course</Button>
              </CardContent>
            </Card>
          </Grid>
        ))}
      </Fragment>
    </Grid>
  </Box>
</MainLayout>
